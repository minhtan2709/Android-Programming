<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoUser"
    android:orientation="vertical"
    android:background="#cbf6e2">
    <ImageView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="35dp"
        android:layout_marginStart="-350dp"
        android:id="@+id/ivback"
        android:src="@drawable/baseline_arrow_back_ios_new_24"/>
    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:background="#f7f5e8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="20dp"
        android:padding="15dp"
        android:layout_marginBottom="60dp">
        <TextView
            android:gravity="center"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:textColor="#C30d3f"
            android:text="Thông tin khách hàng"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"

            >
            <EditText
                android:hint="Nhập vào tên khách hàng:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/edtuser_name"/>
            

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            >
            <EditText
                android:hint="Nhập vào SDT:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/edtusersdt"/>


        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            >
            <EditText
                android:hint="Nhập vào Email:"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/edtuseremail"/>


        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">
            <Button
                android:layout_marginStart="110dp"
                android:padding="10dp"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                app:backgroundTint="@null"
                android:text="Xác nhận"
                android:id="@+id/btnxacnhan"/>
        </LinearLayout>
    </LinearLayout>
        


</LinearLayout>